{
  "manifest_version": 2,
  "name": "Git Highlights",
  "short_name": "Git Highlights",
  "description": "Find solutions faster!",
  "version": "1.0.0.3",
  "author": "Andy Li",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "browser_action": {
    "default_icon": "icon128.png", 
    "default_title": "Git Highlights",
    "default_popup": "popup.html?popup=true"
  },
  "content_scripts": [
    {
      "matches": ["https://www.github.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "*://*/*"
  ],
  "web_accessible_resources": ["content.js"],
  "content_security_policy": "script-src 'self' https://script.google.com/*; https://ssl.google-analytics.com; object-src 'self'"
}